				</triangle_strip>
			</drawlist>
		</renderable>
		<player maxveloc="200" maxaccel="1000" friction="50" maxomega="10"/>
	</entity>


	<!-- player gunners -->
	
	<template name="gunner" type="">
		<renderable>
			<drawlist>
				<color r="0.5" g="0.5" b="0.5" a="1.0"/>
				<triangles>
					<vertex x="0" y="4"/>
					<vertex x="2" y="1"/>
					<vertex x="-2" y="1"/>
				</triangles>
				<color r="1.0" g="1.0" b="1.0" a="1.0"/>
				<scale x="5" y="5"/>
				<calllist name="circle12"/>
			</drawlist>
		</renderable>
	</template>

	<entity name="gunner1" type="gunner">
		<offset x="-24" y="-16" angle="10"/>
		<gunner owner="player" phase="0"/>
	</entity>

	<entity name="gunner2" type="gunner">
		<offset x="24" y="-16" angle="-10"/>
