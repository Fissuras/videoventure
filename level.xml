	<!-- player ship -->

	<entity name="player" type="player">
		<position x="0" y="0"/>
		<collidable layer="0" type="circle" radius="16"/>
		<renderable>
			<drawlist>
				<color r="1.0" g="1.0" b="1.0" a="1.0"/>
				<triangle_strip>
					<vertex x="16" y="-16"/>
					<vertex x="16" y="-11"/>
					<vertex x="5" y="-16"/>
					<vertex x="6" y="-6"/>
					<vertex x="4" y="-13"/>
					<vertex x="6" y="1"/>
					<vertex x="3" y="-13"/>
					<vertex x="3" y="4"/>
					<vertex x="2" y="-16"/>
					<vertex x="2" y="16"/>
					<vertex x="0" y="-16"/>
					<vertex x="-2" y="16"/>
					<vertex x="-2" y="-16"/>
					<vertex x="-3" y="4"/>
					<vertex x="-3" y="-13"/>
					<vertex x="-6" y="1"/>
					<vertex x="-4" y="-13"/>
					<vertex x="-6" y="-6"/>
					<vertex x="-5" y="-16"/>
					<vertex x="-16" y="-11"/>
